body{
	font-family: monospace;
	font-size: 100%;

	background-color: #222222;

	display: grid;
}

button.smallButton{
	font-family: monospace;
	font-size: 400%;

	text-align: center;

	color: #4488ff;
	background-color: #222222;

	border: 2px solid #4488ff;
	border-radius: 8px;
}

/*	Remove the dotted border of a clicked button*/
button.smallButton::-moz-focus-inner{
	border: 0;
}

button.doubleWidthButton{
	font-family: monospace;
	font-size: 400%;

	text-align: center;

	color: #4488ff;
	background-color: #222222;

	border: 2px solid #4488ff;
	border-radius: 8px;

	width: 4ch;
}

button.doubleHeightButton{
	font-family: monospace;
	font-size: 400%;

	text-align: center;

	color: #4488ff;
	background-color: #222222;

	border: 2px solid #4488ff;
	border-radius: 8px;

	height: 4ch;
}

div.firstSingleCell{
	clear: both;
	float: left;

	padding-top: 1%;
}

div.singleCell{
	float: left;

	padding-left: 1%;
	padding-top: 1%;
}

div.tallCell{
	float: left;

	padding-left: 1%;
	padding-top: 1%;
	padding-bottom: 0;
}

div.tallCell + div.singleCell{
	
}

.calcDisplay{
	font-family: monospace;


	color: #222222;
	background-color: #4488ff;

	border-radius: 8px;
	border: 2px solid #222222;


	text-align: right;

	width: 16ch;
	height: 2ch;

	/*Overflow?*/
}

.outerDisplay{
	font-family: monospace;
	font-size: 400%;

	border: 2px solid #4488ff;
	border-radius: 8px;

	width: 16.15ch;
}

{
	"manifest_version": 2,
	"name": "ffcalc",
	"version": "1.0",

	"description": "A calculator extension for FireFox",
	"icons": {
		"48": "icons/ffcalc-48.png"
	},

	"permissions": ["storage"],

	"browser_action": {
		"default_icon": {
			"32" : "icons/ffcalc-32.png"
		},
		"default_title": "ffcalc",
		"default_popup": "popup/ffcalc.html"
	},

	"options_ui": {
      "page": "settings/settings.html",
      "browser_style": false
  },
	
	"applications": {
		"gecko": {
			"id": "edwardldickenson@gmail.com"
		}
	}
}

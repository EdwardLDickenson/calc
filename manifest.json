{
  "manifest_version": 2,
  "name": "ffcalc",
  "version": "1.0",

  "description": "A barebones calculator extension for FireFox",
  "icons": {
    "48": "icons/quicknote-48.png"
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": {
     "32" : "icons/ffcalc-32.png"
    },
    "default_title": "ffcalc",
    "default_popup": "popup/ffcalc.html"
  },

  "applications": {
    "gecko": {
      "id": "quicknote-example@mozilla.org"
    }
  }
}
